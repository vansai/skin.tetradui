<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>2000</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>730</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="100" />
				<effect type="slide" start="550,0" end="0,0" delay="100" time="400" tween="quadratic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="550,0" delay="DialogVisibleFadeAnimationSpeed" time="400" tween="quadratic" easing="in"/>
				<effect type="fade" start="100" end="0" delay="800" time="100" />
			</animation>
			<control type="image">
				<left>130</left>
				<top>-40</top>
				<width>180</width>
				<height>800</height>
				<aspectratio>stretch</aspectratio>
				<texture>blades-runner-right.png</texture>
			</control>
			<control type="image">
				<left>310</left>
				<top>-40</top>
				<width>970</width>
				<height>800</height>
				<aspectratio>stretch</aspectratio>
				<texture>blades-runner-right-edge.png</texture>
			</control>
			<control type="label" id="411">
				<description>Header label</description>
				<left>200</left>
				<label>31102</label>
				<include>DialogHeaderTextCommons</include>
			</control>
			<control type="group">
				<left>180</left>
				<animation effect="fade" delay="500" time="DialogVisibleFadeAnimationSpeed">WindowOpen</animation>
				<animation effect="fade" delay="100" time="DialogVisibleFadeAnimationSpeed">WindowClose</animation>
				<control type="list" id="2000">
					<left>0</left>
					<top>140</top>
					<width>340</width>
					<height>400</height>
					<onleft>Dialog.Close(shutdownmenu)</onleft>
					<onright>2000</onright>
					<onup>2000</onup>
					<ondown>2000</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="50">
						<control type="label">
							<left>25</left>
							<width>290</width>
							<height>47</height>
							<font>font16</font>
							<aligny>center</aligny>
							<textcolor>white</textcolor>
							<align>left</align>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>
					<focusedlayout height="50">
						<control type="image">
							<description>Button focus</description>
							<width>340</width>
							<height>50</height>
							<texture>button.png</texture>
							<animation effect="slide" start="0,-52" time="200" tween="sine" easing="out" condition="Container(2000).OnNext" reversible="false">Focus</animation>
							<animation effect="slide" start="0,52" time="200" tween="sine" easing="out" condition="Container(2000).OnPrevious" reversible="false">Focus</animation>
							<animation effect="fade" start="100" end="70" time="200" condition="!Control.HasFocus(2000)">Conditional</animation>
						</control>
						<control type="label">
							<left>25</left>
							<width>290</width>
							<height>47</height>
							<font>font16</font>
							<aligny>center</aligny>
							<textcolor>white</textcolor>
							<align>left</align>
							<info>ListItem.Label</info>
							<animation effect="slide" end="ButtonSlideBackDistance,0" time="ButtonSlideBackTime" reversible="false">focus</animation>
						</control>
						<control type="image">
							<description>Button shine animation</description>
							<top>2</top>
							<width>70</width>
							<height>46</height>
							<texture>shine-animation.png</texture>
							<visible>System.IdleTime(5) + Control.HasFocus(2000)</visible>
							<animation type="visible" reversible="false">
								<effect type="fade" start="0" end="100" time="200"/>
								<effect type="fade" start="100" end="0" delay="800" time="200"/>
								<effect type="slide" start="0,0" end="290,0" delay="0" time="1000"/>
							</animation>
						</control>
					</focusedlayout>
					<content>
						<item>
							<label>31307</label>
							<onclick>Quit()</onclick>
							<visible>System.LoggedOn</visible>
							<visible>System.ShowExitButton</visible>
						</item>
						<item>
							<label>31306</label>
							<onclick>Powerdown()</onclick>
							<visible>System.CanPowerDown</visible>
						</item>
						<item>
							<label>13011</label>
							<onclick>Suspend()</onclick>
							<visible>System.CanSuspend</visible>
						</item>
						<item>
							<label>13010</label>
							<onclick>Hibernate()</onclick>
							<visible>System.CanHibernate</visible>
						</item>
						<item>
							<label>13013</label>
							<onclick>Reboot()</onclick>
							<visible>System.CanReboot</visible>
						</item>
						<item>
							<label>$LOCALIZE[20126]: $INFO[system.profilename]</label>
							<onclick>Dialog.Close(shutdownmenu)</onclick>
							<onclick>system.logoff</onclick>
							<visible>[System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)] + System.Loggedon</visible>
						</item>
						<item>
							<label>20045</label>
							<onclick>MasterMode</onclick>
							<visible>!System.IsMaster + System.LoggedOn + System.HasLocks</visible>
						</item>
						<item>
							<label>20046</label>
							<onclick>MasterMode</onclick>
							<visible>System.IsMaster + System.LoggedOn + System.HasLocks</visible>
						</item>
						<item>
							<label>13017</label>
							<onclick>InhibitIdleShutdown(true)</onclick>
							<visible>System.HasShutdown + !System.IsInhibit</visible>
						</item>
						<item>
							<label>13018</label>
							<onclick>InhibitIdleShutdown(false)</onclick>
							<visible>System.HasShutdown + System.IsInhibit</visible>
						</item>
					</content>
				</control>
			</control>
		</control>
	</controls>
</window>